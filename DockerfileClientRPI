FROM sdhibit/rpi-raspbian

ENV SNAPCASTVERSION=0.8.0

RUN apt-get update && apt-get install wget -y
RUN wget https://github.com/badaix/snapcast/releases/download/v$SNAPCASTVERSION/snapclient_$SNAPCASTVERSION_armhf.deb

RUN dpkg -i --force-all snapclient_$SNAPCASTVERSION_armhf.deb
RUN apt-get -f install -y

RUN apt-get update && apt-get install alsa-base alsa-utils -y

CMD "/usr/sbin/snapclient"